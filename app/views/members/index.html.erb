<h1>Listing members</h1>
<table>
<style>
	table {
		border-collapse: collapse;
		width: 100%;
	}

	table, td, th {
		border: 1px solid black;
		text-align: left;
	}
</style>
<thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Phone number</th>
	  <th>Email</th>
      <th>Sex</th>
      <th>Membership</th>
      <th>Team</th>
	  <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.dob %></td>
        <td>0<%= member.phone_number %></td>
		<td><%= member.email %></td>
        <td><%= member.sex %></td>
        <td><%= member.membership %></td>
        <td><%= member.team.name %></td>
		<td><%= member.club2.name %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

