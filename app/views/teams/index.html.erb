<h1>Listing teams</h1>

<table>
<style>
	table {
		border-collapse: collapse;
		width: 100%;
	}

	table, td, th {
		border: 1px solid black;
		text-align: left;
	}
</style>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fixture</th>
      <th>Coach</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.fixture.date %></td>
        <td><%= team.coach.name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
