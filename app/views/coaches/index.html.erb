<h1>Listing coaches</h1>

<table>
<style>
	table {
		border-collapse: collapse;
		width: 100%;
	}

	table, td, th {
		border: 1px solid black;
		text-align: left;
	}
</style>
  <thead>
    <tr>
	  <th>Photo</th>
      <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Garda vetted</th>
	  <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
		<td><%= link_to image_tag(coach.photo, size:"100x100") %>
		<td><%= coach.name %></td>
        <td><%= coach.phone_number %></td>
        <td><%= coach.email %></td>
        <td><%= coach.garda_vetted %></td>
		<td><%= coach.club2.name %></td>
		<td><%= link_to 'Show', coach %></td>
        <td><%= link_to 'Edit', edit_coach_path(coach) %></td>
        <td><%= link_to 'Destroy', coach, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

