<h1>Listing fixtures</h1>

<table>
<style>
	table {
		border-collapse: collapse;
		width: 100%;
	}

	table, td, th {
		border: 1px solid black;
		text-align: left;
	}
</style>
  <thead>
    <tr>
      <th>Opposition</th>
      <th>Referee</th>
      <th>Date</th>
      <th>Time</th>
      <th>Venue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fixtures.each do |fixture| %>
      <tr>
        <td><%= fixture.opposition %></td>
        <td><%= fixture.referee %></td>
        <td><%= fixture.date %></td>
        <td><%= fixture.time %></td>
        <td><%= fixture.venue.address %></td>
        <td><%= link_to 'Show', fixture %></td>
        <td><%= link_to 'Edit', edit_fixture_path(fixture) %></td>
        <td><%= link_to 'Destroy', fixture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fixture', new_fixture_path %>
